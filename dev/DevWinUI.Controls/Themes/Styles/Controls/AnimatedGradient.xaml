<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:DevWinUI">

    <Style TargetType="local:AnimatedGradient" BasedOn="{StaticResource DefaultAnimatedGradientStyle}" />

    <Style x:Key="DefaultAnimatedGradientStyle" TargetType="local:AnimatedGradient">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:AnimatedGradient">
                    <Grid>
                        <Rectangle x:Name="PART_Rectangle" />
                        <ContentPresenter x:Name="PART_Content"
                                          Content="{TemplateBinding Content}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
