<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:DevWinUI"
                    xmlns:wind2="using:Microsoft.Graphics.Canvas.UI.Xaml">

    <Style TargetType="local:AudioWave" BasedOn="{StaticResource DefaultAudioWaveStyle}" />

    <Style x:Key="DefaultAudioWaveStyle" TargetType="local:AudioWave">
        <Setter Property="Height" Value="100" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:AudioWave">
                    <wind2:CanvasAnimatedControl x:Name="PART_Canvas"
                                                 HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                                 VerticalAlignment="{TemplateBinding VerticalAlignment}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
