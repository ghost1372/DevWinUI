<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:DevWinUI">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Default">
            <StaticResource x:Key="SegmentedSliderSegmentBackground" ResourceKey="ControlStrongFillColorDefaultBrush" />
            <StaticResource x:Key="SegmentedSliderSegmentForeground" ResourceKey="SystemAccentColorLight1" />
            <x:Double x:Key="SegmentedSliderTrackThemeHeight">4</x:Double>
            <x:Double x:Key="SegmentedSliderTrackRadiusX">2</x:Double>
            <x:Double x:Key="SegmentedSliderTrackRadiusY">2</x:Double>
            <x:Double x:Key="SegmentedSliderFillTrackRadiusX">2</x:Double>
            <x:Double x:Key="SegmentedSliderFillTrackRadiusY">2</x:Double>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Light">
            <StaticResource x:Key="SegmentedSliderSegmentBackground" ResourceKey="ControlStrongFillColorDefaultBrush" />
            <StaticResource x:Key="SegmentedSliderSegmentForeground" ResourceKey="SystemAccentColor" />
            <x:Double x:Key="SegmentedSliderTrackThemeHeight">4</x:Double>
            <x:Double x:Key="SegmentedSliderTrackRadiusX">2</x:Double>
            <x:Double x:Key="SegmentedSliderTrackRadiusY">2</x:Double>
            <x:Double x:Key="SegmentedSliderFillTrackRadiusX">2</x:Double>
            <x:Double x:Key="SegmentedSliderFillTrackRadiusY">2</x:Double>
        </ResourceDictionary>
        <ResourceDictionary x:Key="HighContrast">
            <StaticResource x:Key="SegmentedSliderSegmentBackground" ResourceKey="SystemControlForegroundBaseMediumLowBrush" />
            <StaticResource x:Key="SegmentedSliderSegmentForeground" ResourceKey="SystemAccentColorDark3" />
            <x:Double x:Key="SegmentedSliderTrackThemeHeight">4</x:Double>
            <x:Double x:Key="SegmentedSliderTrackRadiusX">2</x:Double>
            <x:Double x:Key="SegmentedSliderTrackRadiusY">2</x:Double>
            <x:Double x:Key="SegmentedSliderFillTrackRadiusX">2</x:Double>
            <x:Double x:Key="SegmentedSliderFillTrackRadiusY">2</x:Double>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

    <Style TargetType="local:SegmentedSlider" BasedOn="{StaticResource DefaultSegmentedSliderStyle}" />

    <Style x:Key="DefaultSegmentedSliderStyle" TargetType="local:SegmentedSlider">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:SegmentedSlider">
                    <Grid>
                        <ItemsRepeater x:Name="PART_ItemsRepeater">
                            <ItemsRepeater.Layout>
                                <local:HorizontalSimpleGridLayout Spacing="{Binding Spacing, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                            </ItemsRepeater.Layout>
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate>
                                    <Grid VerticalAlignment="Center">
                                        <Rectangle Height="{ThemeResource SegmentedSliderTrackThemeHeight}"
                                                   Fill="{ThemeResource SegmentedSliderSegmentBackground}"
                                                   RadiusX="{ThemeResource SegmentedSliderTrackRadiusX}"
                                                   RadiusY="{ThemeResource SegmentedSliderTrackRadiusY}" />
                                        <Rectangle Width="0"
                                                   Height="{ThemeResource SegmentedSliderTrackThemeHeight}"
                                                   HorizontalAlignment="Left"
                                                   Fill="{ThemeResource SegmentedSliderSegmentForeground}"
                                                   RadiusX="{ThemeResource SegmentedSliderFillTrackRadiusX}"
                                                   RadiusY="{ThemeResource SegmentedSliderFillTrackRadiusY}"
                                                   Tag="FillRect" />

                                        <TextBlock Margin="0,50,0,0"
                                                   VerticalAlignment="Center"
                                                   Style="{StaticResource BaseTextBlockStyle}"
                                                   Tag="SegmentLabel"
                                                   Text="{Binding}" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                        <Thumb x:Name="PART_HorizontalThumb"
                               Width="{ThemeResource SliderHorizontalThumbWidth}"
                               Height="{ThemeResource SliderHorizontalThumbHeight}"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               AutomationProperties.AccessibilityView="Raw"
                               CornerRadius="{StaticResource ControlCornerRadius}"
                               FocusVisualMargin="-14,-6,-14,-6"
                               Style="{StaticResource SliderThumbStyle}" />

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
