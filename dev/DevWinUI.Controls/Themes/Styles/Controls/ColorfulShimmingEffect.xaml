<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:DevWinUI">

    <Style TargetType="local:ColorfulShimmingEffect" BasedOn="{StaticResource DefaultColorfulShimmingEffectStyle}" />

    <Style x:Key="DefaultColorfulShimmingEffectStyle" TargetType="local:ColorfulShimmingEffect">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:ColorfulShimmingEffect">
                    <StackPanel x:Name="PART_Root">
                        <ContentPresenter HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          Content="{TemplateBinding Content}" />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
