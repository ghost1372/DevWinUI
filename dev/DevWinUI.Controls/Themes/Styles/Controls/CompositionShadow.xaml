<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:DevWinUI">

    <Style TargetType="local:CompositionShadow" BasedOn="{StaticResource DefaultCompositionShadowStyle}" />

    <Style x:Key="DefaultCompositionShadowStyle" TargetType="local:CompositionShadow">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:CompositionShadow">
                    <Grid>
                        <Border x:Name="PART_ShadowElement" />
                        <ContentPresenter Content="{TemplateBinding Content}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
