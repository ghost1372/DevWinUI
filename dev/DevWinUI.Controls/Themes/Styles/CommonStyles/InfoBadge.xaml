<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="StringInfoBadgeStyle" TargetType="InfoBadge">
        <Setter Property="Padding" Value="6,1,6,2" />
        <Setter Property="Tag" Value="NEW" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="InfoBadge">
                    <Border x:Name="RootGrid"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=TemplateSettings.InfoBadgeCornerRadius}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="10"
                                   Text="{TemplateBinding Tag}"
                                   TextWrapping="NoWrap" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
