                                                <DiscreteDoubleKeyFrame KeyTime="0:0:0.150" Value="0" />
                                                <SplineDoubleKeyFrame KeySpline="{StaticResource ControlFastOutSlowInKeySpline}" KeyTime="0:0:0.500" Value="1" />
