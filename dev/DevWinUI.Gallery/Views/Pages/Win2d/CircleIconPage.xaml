<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="DevWinUIGallery.Views.CircleIconPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:DevWinUIGallery"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="10" dev:PanelAttach.ChildrenTransitions="Default" Spacing="10">
            <local:ControlExample DocPage="controls/circleIcon"
                                  DocType="Controls"
                                  HeaderText="CircleIcon">
                <local:ControlExample.Xaml>
                    <x:String>
                        &lt;dev:CircleIcon /&gt;
                    </x:String>
                </local:ControlExample.Xaml>
                <local:ControlExample.Pane>
                    <StackPanel Spacing="10">
                        <Slider x:Name="SldBorderThickness"
                                Header="Border Thickness"
                                Value="2" />
                        <TextBox x:Name="TxtContent"
                                 Header="Content (Can be any object)"
                                 PlaceholderText="D"
                                 Text="D" />
                    </StackPanel>
                </local:ControlExample.Pane>
                <dev:CircleIcon BorderStrokeThickness="{x:Bind SldBorderThickness.Value, Mode=OneWay}"
                                Content="{x:Bind TxtContent.Text, Mode=OneWay}" />
            </local:ControlExample>
        </StackPanel>
    </ScrollViewer>

</Page>
