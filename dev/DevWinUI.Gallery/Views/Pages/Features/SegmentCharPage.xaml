<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="DevWinUIGallery.Views.SegmentCharPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:DevWinUIGallery"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="10"
                    dev:PanelAttach.ChildrenTransitions="Default"
                    Spacing="10">
            <local:ControlExample DocPage="controls/segmentChar"
                                  HeaderText="SixteenSegmentChar">
                <local:ControlExample.Xaml>
                    <x:String>
                        &lt;dev:SixteenSegmentChar Character="D" /&gt;
                    </x:String>
                </local:ControlExample.Xaml>
                <local:ControlExample.Pane>
                    <StackPanel Spacing="10">
                        <TextBox x:Name="Txt"
                                 Header="Single Character"
                                 Text="D" />
                        <Slider x:Name="SldAngle"
                                Header="Angle"
                                Maximum="360"
                                Minimum="-360"
                                Value="0" />
                        <ToggleSwitch x:Name="TGIsPatternMaker"
                                      Header="Is Pattern Maker" />
                    </StackPanel>
                </local:ControlExample.Pane>
                <StackPanel Spacing="10">
                    <dev:SixteenSegmentChar x:Name="SixSeg"
                                            Angle="{x:Bind SldAngle.Value, Mode=OneWay}"
                                            Character="{x:Bind Txt.Text, Mode=OneWay}"
                                            IsPatternMakerEnabled="{x:Bind TGIsPatternMaker.IsOn, Mode=OneWay}"
                                            PatternChanged="OnSixteenPatternChanged"
                                            SegmentPointerPressed="OnSixteenPointerPressed" />
                    <TextBox x:Name="TxtPattern"
                             Header="Pattern"
                             IsReadOnly="True" />
                </StackPanel>
            </local:ControlExample>
            <local:ControlExample DocPage="controls/segmentChar"
                                  HeaderText="FourteenSegmentChar">
                <local:ControlExample.Xaml>
                    <x:String>
                        &lt;dev:FourteenSegmentChar Character="D" /&gt;
                    </x:String>
                </local:ControlExample.Xaml>
                <local:ControlExample.Pane>
                    <StackPanel Spacing="10">
                        <TextBox x:Name="Txt2"
                                 Header="Single Character"
                                 Text="D" />
                        <Slider x:Name="SldAngle2"
                                Header="Angle"
                                Maximum="360"
                                Minimum="-360"
                                Value="0" />
                        <ToggleSwitch x:Name="TGIsPatternMaker2"
                                      Header="Is Pattern Maker" />
                    </StackPanel>
                </local:ControlExample.Pane>
                <StackPanel Spacing="10">
                    <dev:FourteenSegmentChar x:Name="FourSeg"
                                             Angle="{x:Bind SldAngle2.Value, Mode=OneWay}"
                                             Character="{x:Bind Txt2.Text, Mode=OneWay}"
                                             IsPatternMakerEnabled="{x:Bind TGIsPatternMaker2.IsOn, Mode=OneWay}"
                                             PatternChanged="OnFourteenPatternChanged"
                                             SegmentPointerPressed="OnFourteenPointerPressed" />
                    <TextBox x:Name="TxtPattern2"
                             Header="Pattern"
                             IsReadOnly="True" />
                </StackPanel>

            </local:ControlExample>
            <local:ControlExample DocPage="controls/segmentChar"
                                  HeaderText="Matrix8x14SegmentChar">
                <local:ControlExample.Xaml>
                    <x:String>
                        &lt;dev:Matrix8x14SegmentChar Character="D" /&gt;
                    </x:String>
                </local:ControlExample.Xaml>
                <local:ControlExample.Pane>
                    <StackPanel Spacing="10">
                        <TextBox x:Name="Txt3"
                                 Header="Single Character"
                                 Text="D" />
                        <Slider x:Name="SldAngle3"
                                Header="Angle"
                                Maximum="360"
                                Minimum="-360"
                                Value="0" />
                        <ToggleSwitch x:Name="TGMatrixSquare"
                                      Header="IsMatrixSquare" />
                        <ToggleSwitch x:Name="TGIsPatternMaker3"
                                      Header="Is Pattern Maker" />
                    </StackPanel>
                </local:ControlExample.Pane>
                <StackPanel Spacing="10">
                    <dev:Matrix8x14SegmentChar x:Name="MatrixSeg"
                                               Angle="{x:Bind SldAngle3.Value, Mode=OneWay}"
                                               Character="{x:Bind Txt3.Text, Mode=OneWay}"
                                               IsMatrixSquare="{x:Bind TGMatrixSquare.IsOn, Mode=OneWay}"
                                               IsPatternMakerEnabled="{x:Bind TGIsPatternMaker3.IsOn, Mode=OneWay}"
                                               PatternChanged="OnMatrixPatternChanged"
                                               SegmentPointerPressed="OnMatrixPointerPressed" />
                    <TextBox x:Name="TxtPattern3"
                             Header="Pattern"
                             IsReadOnly="True" />
                </StackPanel>
            </local:ControlExample>
        </StackPanel>
    </ScrollViewer>

</Page>
