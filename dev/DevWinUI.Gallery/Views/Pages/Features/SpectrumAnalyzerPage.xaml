<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="DevWinUIGallery.Views.SpectrumAnalyzerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:DevWinUIGallery"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="10" dev:PanelAttach.ChildrenTransitions="Default" Spacing="10">
            <InfoBar Title="AOT Not Supported"
                     IsClosable="False"
                     IsOpen="True"
                     Message="This sample does not work with AOT. NAudio is not AOT-compatible. Compile without AOT or replace the audio library."
                     Severity="Warning" />
            <local:ControlExample DocPage="controls/spectrumAnalyzer"
                                  HeaderText="SpectrumAnalyzer">
                <local:ControlExample.Pane>
                    <StackPanel Spacing="10">
                        <Button x:Name="BtnOpen"
                                HorizontalAlignment="Stretch"
                                Click="BtnOpen_Click"
                                Content="Open Audio" />
                        <TextBox x:Name="TxtPath"
                                 HorizontalAlignment="Stretch"
                                 IsReadOnly="True"
                                 PlaceholderText="File Path" />
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <Button x:Name="BtnPlay"
                                    Click="BtnPlay_Click"
                                    Content="Play" />
                            <Button x:Name="BtnPause"
                                    Click="BtnPause_Click"
                                    Content="Pause" />
                            <Button x:Name="BtnStop"
                                    Click="BtnStop_Click"
                                    Content="Stop" />
                        </StackPanel>
                    </StackPanel>
                </local:ControlExample.Pane>
                <local:ControlExample.Xaml>
                    <x:String>
                        &lt;dev:SpectrumAnalyzer x:Name="SpectrumAnalyzerSample" /&gt;
                    </x:String>
                </local:ControlExample.Xaml>
                <local:ControlExample.CSharp>
                    <x:String>
                        SpectrumAnalyzerSample.RegisterSoundPlayer(soundEngine);
                    </x:String>
                </local:ControlExample.CSharp>
                <dev:SpectrumAnalyzer x:Name="SpectrumAnalyzerSample" />
            </local:ControlExample>
        </StackPanel>
    </ScrollViewer>

</Page>
