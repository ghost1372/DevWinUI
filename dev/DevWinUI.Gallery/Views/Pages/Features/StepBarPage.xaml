<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="DevWinUIGallery.Views.StepBarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:DevWinUIGallery"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="10" dev:PanelAttach.ChildrenTransitions="Default" Spacing="10">
            <local:ControlExample DocPage="controls/stepBar"
                                  XamlSource="Features/StepBar_xaml.txt">
                <local:ControlExample.Pane>
                    <StackPanel Spacing="10">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Button x:Name="BtnNext"
                                    MinWidth="120"
                                    Click="BtnNext_Click"
                                    Content="Next" />
                            <Button x:Name="BtnPrev"
                                    MinWidth="120"
                                    Click="BtnPrev_Click"
                                    Content="Prev" />
                        </StackPanel>
                        <ComboBox x:Name="CmbStatus"
                                  Header="Status"
                                  ItemsSource="{x:Bind ViewModel.StepStatusItems, Mode=OneWay}"
                                  SelectedIndex="0" />
                        <ComboBox x:Name="CmbOrientation"
                                  Header="Orientation"
                                  ItemsSource="{x:Bind ViewModel.OrientationItems, Mode=OneWay}"
                                  SelectedIndex="1">
                            <ComboBox.ItemTemplate>
                                <DataTemplate x:DataType="Orientation">
                                    <TextBlock Text="{x:Bind}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <ComboBox x:Name="CmbHeaderDisplayMode"
                                  Header="Header Display Mode"
                                  ItemsSource="{x:Bind ViewModel.StepBarHeaderDisplayModeItems, Mode=OneWay}"
                                  SelectedIndex="1" />
                        <ComboBox x:Name="CmbDisplayMode"
                                  Header="Display Mode"
                                  ItemsSource="{x:Bind ViewModel.StepBarDisplayModeItems, Mode=OneWay}"
                                  SelectedIndex="0" />
                        <ToggleSwitch x:Name="TGShowStepIndex"
                                      Header="Show StepIndex"
                                      IsOn="True" />
                        <ToggleSwitch x:Name="TGAutoSelectOnItemClick"
                                      Header="Auto Select On Item Click"
                                      IsOn="True" />
                    </StackPanel>
                </local:ControlExample.Pane>
                <dev:StepBar x:Name="StepBarSample"
                             AutoSelectOnItemClick="{x:Bind TGAutoSelectOnItemClick.IsOn, Mode=OneWay}"
                             DisplayMode="{x:Bind ((dev:StepBarDisplayMode)CmbDisplayMode.SelectedItem), Mode=OneWay}"
                             HeaderDisplayMode="{x:Bind ((dev:StepBarHeaderDisplayMode)CmbHeaderDisplayMode.SelectedItem), Mode=OneWay}"
                             Orientation="{x:Bind ((Orientation)CmbOrientation.SelectedItem), Mode=OneWay}"
                             ShowStepIndex="{x:Bind TGShowStepIndex.IsOn, Mode=OneWay}"
                             Status="{x:Bind ((dev:StepStatus)CmbStatus.SelectedItem), Mode=OneWay}">
                    <dev:StepBarItem Content="Register" />
                    <dev:StepBarItem Content="BasicInfo" />
                    <dev:StepBarItem Content="UploadFile" />
                    <dev:StepBarItem Content="Complete" />
                </dev:StepBar>
            </local:ControlExample>
        </StackPanel>
    </ScrollViewer>
</Page>
