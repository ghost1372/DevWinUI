<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="DevWinUIGallery.Views.FlipBlockPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:DevWinUIGallery"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="10" dev:PanelAttach.ChildrenTransitions="Default" Spacing="10">
            <local:ControlExample DocPage="controls/flipBlock"
                                  HeaderText="FlipBlock">
                <local:ControlExample.Xaml>
                    <x:String>
                        &lt;dev:FlipBlock Value="1" /&gt;
                    </x:String>
                </local:ControlExample.Xaml>
                <local:ControlExample.Pane>
                    <StackPanel Spacing="10">
                        <NumberBox x:Name="NbValue"
                                   Header="Value"
                                   Minimum="0"
                                   SpinButtonPlacementMode="Inline"
                                   Value="1" />
                    </StackPanel>
                </local:ControlExample.Pane>
                <StackPanel Spacing="10">
                    <InfoBar Title="Change Value to see Flip Effect"
                             IsClosable="False"
                             IsOpen="True"
                             Severity="Warning" />
                    <dev:FlipBlock Value="{x:Bind NbValue.Value, Mode=OneWay}" />
                </StackPanel>
            </local:ControlExample>
        </StackPanel>
    </ScrollViewer>

</Page>
