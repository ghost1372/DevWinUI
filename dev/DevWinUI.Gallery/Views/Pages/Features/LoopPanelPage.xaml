<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="DevWinUIGallery.Views.LoopPanelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:DevWinUIGallery"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:DevWinUIGallery.Views"
      mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="10" dev:PanelAttach.ChildrenTransitions="Default" Spacing="10">
            <local:ControlExample DocPage="controls/loopPanel"
                                  HeaderText="LoopPanel"
                                  XamlSource="Features/LoopPanelPage_xaml.txt">
                <local:ControlExample.Pane>
                    <StackPanel Spacing="10">
                        <ToggleSwitch x:Name="TgBringChildrenIntoView"
                                      Header="Bring Children Into View" />
                        <ToggleSwitch x:Name="TgIsInertiaEnabled"
                                      Header="Is Inertia Enabled"
                                      IsOn="True" />
                        <Slider x:Name="SldSpacing"
                                Header="Spacing"
                                Maximum="100"
                                Minimum="0"
                                Value="5" />
                        <Slider x:Name="SldMouseWheelScrollFactor"
                                Header="Mouse Wheel Scroll Factor"
                                Maximum="1"
                                Minimum="0"
                                StepFrequency="0.01"
                                Value="0.25" />
                        <Slider x:Name="SldDragScrollFactor"
                                Header="Drag Scroll Factor"
                                Maximum="1"
                                Minimum="0"
                                StepFrequency="0.01"
                                Value="1.0" />
                        <Slider x:Name="SldOffset"
                                Header="Offset"
                                Maximum="1"
                                Minimum="0"
                                StepFrequency="0.01"
                                Value="0.5" />
                        <Slider x:Name="SldRelativeOffset"
                                Header="Relative Offset"
                                Maximum="1"
                                Minimum="0"
                                StepFrequency="0.01"
                                Value="0.5" />
                    </StackPanel>
                </local:ControlExample.Pane>
                <ItemsControl x:Name="loopingList"
                              Height="200"
                              ItemsSource="{x:Bind Items, Mode=OneWay}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <dev:LoopPanel x:Name="LoopPanelSample"
                                           Background="Transparent"
                                           BringChildrenIntoView="{Binding ElementName=TgBringChildrenIntoView, Path=IsOn}"
                                           DragScrollFactor="{Binding ElementName=SldDragScrollFactor, Path=Value}"
                                           IsInertiaEnabled="{Binding ElementName=TgIsInertiaEnabled, Path=IsOn}"
                                           MouseWheelScrollFactor="{Binding ElementName=SldMouseWheelScrollFactor, Path=Value}"
                                           Orientation="Horizontal"
                                           RelativeOffset="{Binding ElementName=SldRelativeOffset, Path=Value}"
                                           Spacing="{Binding ElementName=SldSpacing, Path=Value}"
                                           Offset="{Binding ElementName=SldOffset, Path=Value}" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="views:LoopPanelItem">
                            <Border Margin="10,10,0,0"
                                    Padding="5"
                                    Background="Purple"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1">
                                <Image Source="{x:Bind ImageSource}"
                                       Stretch="Uniform">

                                </Image>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </local:ControlExample>
        </StackPanel>
    </ScrollViewer>
</Page>
