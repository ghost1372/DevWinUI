<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="DevWinUIGallery.Views.LoopingSelectorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:DevWinUIGallery"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="10" dev:PanelAttach.ChildrenTransitions="Default" Spacing="10">
            <local:ControlExample DocPage="controls/loopingSelector">
                <local:ControlExample.Xaml>
                    <x:String>
                        &lt;dev:LoopingSelector x:Name="LoopingSelectorSample" Height="270" HorizontalContentAlignment="Center" ItemHeight="40"/&gt;
                    </x:String>
                </local:ControlExample.Xaml>
                <local:ControlExample.CSharp>
                    <x:String>
                        LoopingSelectorSample.Items = new List&lt;object&gt;(){ "Item 1", "Item 2"}
                    </x:String>
                </local:ControlExample.CSharp>
                <local:ControlExample.Pane>
                    <StackPanel Spacing="10">
                        <ToggleSwitch x:Name="TgShouldLoop"
                                      IsOn="True" />
                    </StackPanel>
                </local:ControlExample.Pane>
                <dev:LoopingSelector x:Name="LoopingSelectorSample"
                                     Width="150"
                                     Height="270"
                                     Padding="0,3,0,6"
                                     HorizontalContentAlignment="Center"
                                     ItemHeight="40"
                                     ShouldLoop="{x:Bind TgShouldLoop.IsOn, Mode=OneWay}" />
            </local:ControlExample>
        </StackPanel>
    </ScrollViewer>

</Page>
