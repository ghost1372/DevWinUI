<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="DevWinUIGallery.Views.XamlLightsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:DevWinUIGallery"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="10" dev:PanelAttach.ChildrenTransitions="Default" Spacing="10">
            <local:ControlExample DocPage="common/lights"
                                  HeaderText="Combined Lights">
                <local:ControlExample.CSharp>
                    <x:String>
                        myGrid.Lights.Add(new AmbLight());#nl#
                        myGrid.Lights.Add(new RippleLight());#nl#
                        myGrid.Lights.Add(new HoverLight());
                    </x:String>
                </local:ControlExample.CSharp>
                <Grid x:Name="AllGrid" Width="400" Height="250" Style="{ThemeResource CardGridStyle}" />
            </local:ControlExample>
            <local:ControlExample DocPage="common/lights"
                                  HeaderText="AmbLight">
                <local:ControlExample.CSharp>
                    <x:String>
                        myGrid.Lights.Add(new AmbLight());
                    </x:String>
                </local:ControlExample.CSharp>
                <Grid x:Name="AmbGrid" Width="400" Height="250" Style="{ThemeResource CardGridStyle}" />
            </local:ControlExample>
            <local:ControlExample DocPage="common/lights"
                                  HeaderText="HoverLight">
                <local:ControlExample.CSharp>
                    <x:String>
                        myGrid.Lights.Add(new HoverLight());
                    </x:String>
                </local:ControlExample.CSharp>
                <Grid x:Name="HoverGrid" Width="400" Height="250" Style="{ThemeResource CardGridStyle}" />
            </local:ControlExample>
            <local:ControlExample DocPage="common/lights"
                                  HeaderText="RippleLight">
                <local:ControlExample.CSharp>
                    <x:String>
                        myGrid.Lights.Add(new RippleLight());
                    </x:String>
                </local:ControlExample.CSharp>
                <Grid x:Name="RippleGrid" Width="400" Height="250" Style="{ThemeResource CardGridStyle}" />
            </local:ControlExample>
        </StackPanel>
    </ScrollViewer>
</Page>
