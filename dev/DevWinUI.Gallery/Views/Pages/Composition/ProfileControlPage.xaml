<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="DevWinUIGallery.Views.ProfileControlPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:DevWinUIGallery"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="10" dev:PanelAttach.ChildrenTransitions="Default" Spacing="10">
            <local:ControlExample DocPage="controls/fluidBanner">
                <local:ControlExample.Xaml>
                    <x:String>&lt;dev:ProfileControl Source="ms-appx:///Assets/Profile/1.jpg" /&gt;</x:String>
                </local:ControlExample.Xaml>
                <local:ControlExample.Pane>
                    <StackPanel Spacing="10">
                        <Button x:Name="BtnPrev"
                                MinWidth="150"
                                Click="BtnPrev_Click"
                                Content="Previous" />
                        <Button x:Name="BtnNext"
                                MinWidth="150"
                                Click="BtnNext_Click"
                                Content="Next" />
                    </StackPanel>
                </local:ControlExample.Pane>
                <dev:ProfileControl x:Name="profile"
                                    Width="320"
                                    Height="320"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    BorderGap="25"
                                    Stretch="Uniform"
                                    Tint="#efefef" />
            </local:ControlExample>
        </StackPanel>
    </ScrollViewer>
</Page>
